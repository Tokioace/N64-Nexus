# Battle64 Seasonal Events Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=battle64_events
# DB_USER=postgres
# DB_PASSWORD=password

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Event Configuration
EVENT_CHECK_INTERVAL=3600000  # Check event status every hour (in milliseconds)
AUTO_ACTIVATE_EVENTS=true     # Automatically activate/deactivate events
ENABLE_NOTIFICATIONS=true     # Enable event notifications

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/seasonal-events.log

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000      # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# Feature Flags
ENABLE_EXPORT_IMPORT=true
ENABLE_RECOMMENDATIONS=true
ENABLE_CALENDAR=true
ENABLE_STATISTICS=true