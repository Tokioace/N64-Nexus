{
  "name": "battle64-friends-groups",
  "version": "1.0.0",
  "description": "Friends & Groups module for Battle64 - A social networking platform for retro gaming enthusiasts",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon src/server/index.js",
    "client:dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "db:setup": "node src/server/database/setup.js",
    "db:migrate": "node src/server/database/migrate.js",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix"
  },
  "keywords": [
    "battle64",
    "n64",
    "retro-gaming",
    "social-networking",
    "friends",
    "groups",
    "messaging"
  ],
  "author": "Battle64 Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "vite": "^4.4.7",
    "@vitejs/plugin-react": "^4.0.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}